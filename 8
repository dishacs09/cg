import cv2
import numpy as np
#image_path = "Che.jpg" # Replace "your_image.jpg" with the
path to your image
image = cv2.imread("D:/CGLAB/LION.jpg")
if image is None:
print("Failed to load the image.")
else:
cv2.imshow("Original Image", image)
angle = 90 # Rotation angle in degrees
center = (image.shape[1] // 2, image.shape[0] // 2) # Center of
rotation
rotation_matrix = cv2.getRotationMatrix2D(center, angle, 1.0) #
Rotation matrix
rotated_image = cv2.warpAffine(image, rotation_matrix,
(image.shape[1], image.shape[0]))
scale_factor = 0.2 # Scaling factor (0.5 means half the size)
scaled_image = cv2.resize(image, None, fx=scale_factor,
fy=scale_factor)
translation_matrix = np.float32([[1, 0, 100], [0, 1, -50]]) #
Translation matrix (100 pixels right, 50 pixels up)
translated_image = cv2.warpAffine(image, translation_matrix,
(image.shape[1], image.shape[0]))
cv2.imshow("Rotated Image", rotated_image)
cv2.imshow("Scaled Image", scaled_image)
cv2.imshow("Translated Image", translated_image)
cv2.waitKey(0)
cv2.destroyAllWindows()
